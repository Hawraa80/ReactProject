<!DOCTYPE html>
<html>
<head>
  <title>User List</title>
  <style>
    /* General Styles */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f2f2f2; /* Add background color to the body */
    }

    /* Table Styles */
    .user-list-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #fff; /* Add background color to the container */
      border: 1px solid #ddd; /* Add border to the container */
      border-radius: 5px; /* Add border radius to the container */
    }

    h1 {
      text-align: center;
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      border: 1px solid #ddd; /* Add border to the table */
    }

    th, td {
      text-align: left;
      padding: 8px;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    /* Action Icons Styles */
    .action-icons {
      display: flex;
      align-items: center;
    }

    .action-icons i {
      margin-right: 5px;
      cursor: pointer;
    }

    .delete-icon {
      color: red;
    }

    .edit-icon {
      color: blue;
    }

    /* Add Button Styles */
    #add-btn {
      margin-bottom: 20px;
      padding: 10px 20px;
      background-color: #4CAF50;
      border: none;
      color: #fff;
      cursor: pointer;
      border-radius: 4px;
    }
       /* Add Button Styles */
    #add-category {
      margin-bottom: 20px;
      padding: 10px 20px;
      background-color: #4CAF50;
      border: none;
      color: #fff;
      cursor: pointer;
      border-radius: 4px;
    }

    /* Popup Styles */
    .popup-container {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 9999;
      display: none;
    }

    .popup-content {
      background-color: #fff;
      padding: 20px;
      max-width: 500px;
      border-radius: 5px;
    }

    .close-btn {
      text-align: right;
    }

    /* Edit Form Styles */
    .edit-form label {
      display: block;
      margin-bottom: 5px;
    }

    .edit-form input[type="text"] {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      margin-bottom: 10px;
    }

    .edit-form button[type="submit"] {
      padding: 10px 20px;
      background-color: #4CAF50;
      border: none;
      color: #fff;
      cursor: pointer;
      border-radius: 4px;
    }
  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
  <div class="user-list-container">
    <h1>User List</h1>
    <button id="add-btn">Add Item</button>
    <button id="add-category">Add category</button>
    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Mobile Number</th>
        <th>Category</th>
        <th></th>
      </tr>
      {{#each users}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.mobilenumber}}</td>
        <td>{{this.category}}</td>
        <td class="action-icons">
          <i class="fas fa-trash-alt delete-icon" data-id="{{this._id}}"></i>
          <i class="fas fa-edit edit-icon" data-id="{{this._id}}"></i>
        </td>
      </tr>
      {{/each}}
    </table>
  </div>

  <!-- Edit Form Popup -->
  <div class="popup-container" id="edit-popup">
    <div class="popup-content">
      <div class="close-btn">
        <button id="close-edit-popup">Close</button>
      </div>
      <h2>Edit User</h2>
      <form class="edit-form" method="PUT">
        <input type="hidden" id="edit-user-id" name="edit-user-id">
        <label for="edit-description">Description:</label>
        <input type="text" id="edit-description" name="edit-description" required><br><br>
        <label for="edit-mobilenumber">Mobile Number:</label>
        <input type="text" id="edit-mobilenumber" name="edit-mobilenumber"><br><br>
        <button type="submit">Save</button>
      </form>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function() {

      $("#add-btn").on("click", function() {
        window.location.href = "/Index";
      });
      $("#add-category").on("click", function() {
        
        window.location.href = "/category";
    });

       

      // Delete action
      $(".delete-icon").click(function() {
        var userId = $(this).data("id");
        const confirmation = confirm("Are you sure you want to delete this user?");
        if (confirmation) {
          $.ajax({
            url: "/user/" + userId,
            method: "DELETE",
            success: function(response) {
              alert("User deleted successfully");
              location.reload();
            },
            error: function(error) {
              alert("Error deleting user: " + error);
            }
          });
        }
      });

      // Edit action
      $(".edit-icon").click(function() {
        var userId = $(this).data("id");
        var url = "/user/" + userId;
        $.ajax({
          url: "/user/" + userId,
          method: "GET",
          success: function(response) {
            $("#edit-user-id").val(response._id);
            $("#edit-description").val(response.description);
            $("#edit-mobilenumber").val(response.mobilenumber);
            $("#edit-popup").fadeIn();
          },
          error: function(error) {
            alert("Error fetching user details: " + error);
          }
        });
      });

      $(".edit-form").on("submit", function(e) {
        e.preventDefault();
        var userId = $("#edit-user-id").val();
        var updatedUser = {
          description: $("#edit-description").val(),
          mobilenumber: $("#edit-mobilenumber").val()
        };
        

        $.ajax({
          url: "/user/" + userId,
          method: "PUT",
          data: updatedUser,
          success: function(response) {
            alert("User information updated");
            location.reload();
          },
          error: function(error) {
            alert("Error updating user information: " + error);
          }
        });
      });

      // Close the edit form popup
      $("#close-edit-popup").on("click", function() {
        $("#edit-popup").fadeOut();
      });
    });
  </script>
</body>
</html>
