<!DOCTYPE html>
<html>

<head>
  <title>User List</title>
  <style>
    /* General Styles */
    /* ... (CSS styles for the page) ... */
  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>
  <!-- User List Container -->
  <div class="user-list-container">
    <h1>Users List</h1>

    <!-- Add Item Button -->
    <button id="add-btn">Add Item</button>

    <!-- Add Category Button -->
    <button id="add-category">Add category</button>

    <!-- Users Table -->
    <table>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Mobile Number</th>
        <th>Category</th>
        <th></th>
      </tr>
      {{#each users}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.mobilenumber}}</td>
        <td>{{this.category}}</td>
        <td class="action-icons">
          <!-- Delete Icon -->
          <i class="fas fa-trash-alt delete-icon" data-id="{{this._id}}"></i>

          <!-- Edit Icon -->
          <i class="fas fa-edit edit-icon" data-id="{{this._id}}"></i>
        </td>
      </tr>
      {{/each}}
    </table>
  </div>

  <!-- Edit Form Popup -->
  <div class="popup-container" id="edit-popup">
    <div class="popup-content">
      <div class="close-btn">
        <!-- Close Button -->
        <button class="close" id="close-edit-popup">Close</button>
      </div>
      <h2>Edit User</h2>
      <form class="edit-form" method="PUT">
        <input type="hidden" id="edit-user-id" name="edit-user-id">

        <!-- Edit User Description -->
        <label for="edit-description">Description:</label>
        <input type="text" id="edit-description" name="edit-description" required><br><br>

        <!-- Edit User Mobile Number -->
        <label for="edit-mobilenumber">Mobile Number:</label>
        <input type="text" id="edit-mobilenumber" name="edit-mobilenumber"><br><br>

        <!-- Edit User Category -->
        <label for="edit-category">Category:</label>
        <select id="edit-category" name="edit-category"></select><br><br>

        <!-- Save Button -->
        <button class="save" type="submit">Save</button>
      </form>
    </div>
  </div>

  <!-- jQuery Library -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function () {
      // Add button click event
      $("#add-btn").on("click", function () {
        window.location.href = "/Index";
      });

      // Add category button click event
      $("#add-category").on("click", function () {
        window.location.href = "/category";
      });

      // Delete action
      $(".delete-icon").click(function () {
        // ... (Delete user functionality) ...
      });

      // Edit action
      $(".edit-icon").click(function () {
        // ... (Edit user functionality) ...
      });

      // Close Edit Form Popup
      $("#close-edit-popup").click(function () {
        // ... (Close edit popup functionality) ...
      });

      // Save edited user
      $(".edit-form").submit(function (e) {
        // ... (Save edited user functionality) ...
      });
    });
  </script>
</body>

</html>